<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="custom_theme_color">#eeeeee</color>
    <color name="custom_text_color">#000000</color>
    <color name="bright_foreground_dark">#000000</color>
    <color name="blue_dark">#046481</color>
    <color name="blue_light">#3ea4c2</color>
    <color name="orange_dark">#e3a52d</color>
    <color name="orange_light">#f9e036</color>
    <color name="red_dark">#e94546</color>
    <color name="red_light">#ea2626</color>
    <color name="green_dark">#ec871b</color>
    <color name="green_light">#f9c436</color>

    <dimen name="roundbutton_text">25dip</dimen>

    <style name="CustomTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:textColor">@color/custom_text_color</item>
        <item name="android:spinnerItemStyle">@style/CustomSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomSpinnerItem.DropDownItem</item>
    </style>

    <style name="CustomSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/CustomTextAppearanceSpinnerItem</item>
        <item name="android:textColor">@color/custom_text_color</item>
    </style>

    <style name="CustomSpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/custom_text_color</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="CustomTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/custom_text_color</item>
    </style>

</resources>